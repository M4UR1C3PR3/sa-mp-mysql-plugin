GPP=g++
GCC=gcc

OUTFILE="bin/mysql_static.so"

COMPILE_FLAGS=-c -O3 -w -DLINUX -Wall -I src/SDK/amx/

all:
	$(GCC) $(COMPILE_FLAGS) src/SDK/amx/*.c
	$(GPP) $(COMPILE_FLAGS) src/SDK/*.cpp
	$(GPP) $(COMPILE_FLAGS) src/*.cpp
	$(GPP) -O2 -fshort-wchar -shared -o $(OUTFILE) *.o ./src/mysql_lib/libmysqlclient.a -lpthread
	rm -f *.o